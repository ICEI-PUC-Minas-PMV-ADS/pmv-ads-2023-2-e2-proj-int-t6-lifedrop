@model IEnumerable<LifeDrop.Models.Agendamento>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Agendamentos";
}
<head>
    <style>
        body {
            background-color: #f3f4f4;
        }

        h1 {
            color: #014AAD;
            margin: 0px 15px 30px 15px;
        }

        table {
            margin: 25px 20px 25px 20px;
            width: 1260px;
            height: 160px;
            background-color: white;
            border-radius: 15px;
            border-collapse: separate;
            border-spacing: 15px;
            table-layout: fixed;
        }
    
        .div_table {
            background-color: white;
            border-radius: 15px;
            box-shadow: rgba(0, 0, 0, 0.1) 0px 0.3px 0.9px, rgba(0, 0, 0, 0.13) 0px 1.6px 3.6px;
        }
    </style>
</head>
<body> 
    <h1>Agendamentos </h1>
    @foreach (var item in Model)
    {
    <div class="div_table">
        <table>
            <tr>
                <th>Dia:</th>
                    <td>@Html.DisplayFor(modelItem => item.Data)</td>
                <th>Horário:</th>
                    <td>@Html.DisplayFor(modelItem => item.Hora)</td>
                <th>Status do Agendamento:</th>
                    <td>@Html.DisplayFor(modelItem => item.StatusDaDoacao)</td>
            </tr>
            <tr>
                <th>Nome:</th>
                    <td>@Html.DisplayFor(modelItem => item.Doador.Nome)</td>
                <th>Data de Nascimento:</th>
                    <td>@Html.DisplayFor(modelItem => item.Doador.DataNasc)</td>
                <th>CPF:</th>
                    <td>@Html.DisplayFor(modelItem => item.Doador.CPF)</td>
            </tr>
            <tr>
                <th>Telefone:</th>
                    <td>@Html.DisplayFor(modelItem => item.Doador.Telefone)</td>
                <th>E-mail:</th>
                    <td>@Html.DisplayFor(modelItem => item.Doador.Email)</td>
                <th>Tipo Sanguíneo:</th>
                    <td>@Html.DisplayFor(modelItem => item.Doador.TipoSanguineo)</td>
            </tr>
        </table>
    </div>
    }
</body>
