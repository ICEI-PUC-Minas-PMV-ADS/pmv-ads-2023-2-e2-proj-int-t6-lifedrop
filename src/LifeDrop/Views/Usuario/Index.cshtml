@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<body>
    <div>
        <section class="section">
            <section class="container mt-5">
                <div class="row">
                    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4 ">

                        <div class="card card-primary">
                            <div class="card-header text-center">
                                <h4>Acesse sua conta</h4>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col m-3">
                                    <form>
                                        <div class="row justify-content-center">
                                            <div class="w-80 mb-1">
                                                <input type="email" class="form-control" name="email" placeholder="E-mail" required id="E-mail">
                                            </div>
                                        </div>
                                        <div class="row justify-content-center">
                                            <div class="w-80 mb-1">
                                                <input type="password" name="password" class="form-control" placeholder="Senha" required id="password">
                                            </div>
                                        </div>
                                        <div class="row justify-content-center">
                                            <div class="w-80 ">
                                                <select name="origem" id="origem" class="form-select" aria-label="teste">
                                                    <option selected>Selecione o usuario</option>
                                                    <option value="1">Doador</option>
                                                    <option value="2">Banco de Sangue</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="row justify-content-center">
                                            <div class="w-80 mb-1">
                                                <div class="form-check">
                                                    <input type="checkbox" name="remember" id="remember" class="form-check-input">
                                                    <label for="remember" class="form-check-label">Manter conectado</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="w-80 mb-2 align-items-center text-center">
                                                <button type="submit" class="btn btn-primary w-50">Entrar</button>
                                            </div>
                                        </div>
                                        <div class="row justify-content-center text-end">
                                            <div class="w-80">
                                                <a href="@Url.Action("RecuperarSenha", "Usuario")">Esqueceu a senha?</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </section>
    </div>
</body>