@model LifeDrop.Models.Agendamento

@{
    ViewData["Title"] = "View";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h5 class="text-center  mb-4 mt-4">Você tem certeza que gostaria de cancelar esse agendamento?</h5>
            <div>               
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Data)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Data.Date)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hora)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hora)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StatusDaDoacao)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StatusDaDoacao)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Unidade.NomeUnidade)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Unidade.NomeUnidade)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Unidade.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Unidade.Email)
                    </dd>
                </dl>

                <form asp-action="Cancelar">
                    <input type="hidden" asp-for="IdAgendamento" />
                    <div class="text-center">
                        <input type="submit" value="Confirmar" class="btn btn-primary" /> 
                        <a asp-action="Index" asp-controller="MeuPerfil" class="btn btn-warning">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

